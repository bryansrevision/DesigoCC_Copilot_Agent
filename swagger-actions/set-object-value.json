{
  "name": "SetObjectValue",
  "displayName": "Set Object Value",
  "description": "Set the value of a specified object in Desigo CC",
  "operation": {
    "method": "PUT",
    "uri": "/api/objects/{objectId}/value",
    "summary": "Set value of an object",
    "operationId": "SetObjectValue"
  },
  "parameters": [
    {
      "name": "objectId",
      "type": "string",
      "description": "The unique identifier of the object",
      "required": true,
      "in": "path"
    },
    {
      "name": "Authorization",
      "type": "string",
      "description": "Bearer token for authentication",
      "required": true,
      "in": "header"
    },
    {
      "name": "value",
      "type": "number",
      "description": "The new value to set",
      "required": true,
      "in": "body"
    },
    {
      "name": "priority",
      "type": "integer",
      "description": "Priority level (1-16, default: 8)",
      "required": false,
      "in": "body",
      "default": 8
    }
  ],
  "responses": {
    "200": {
      "description": "Value set successfully",
      "schema": {
        "type": "object",
        "properties": {
          "objectId": {"type": "string"},
          "newValue": {"type": "number"},
          "status": {"type": "string"}
        }
      }
    },
    "400": {"description": "Bad request - invalid value or parameters"},
    "401": {"description": "Unauthorized"},
    "403": {"description": "Forbidden - insufficient permissions"},
    "404": {"description": "Object not found"},
    "500": {"description": "Internal server error"}
  }
}